// Variables

// Color
$grey = #68626E
$purple = #6D36A0

// Fonts
$text-size = 1.4em
$title-size = 3em
$font-family = 'Montserrat', sans-serif
$text = $text-size $font-family
$title = $title-size $font-family

*
    margin 0
    padding 0

.aside
    position fixed
    height 100vh
    left 2vw
    display flex
    flex-direction column
    justify-content center
    img
        width 8vw
        position fixed
        top 5vh
    nav
        height 20%
        position relative
        &::after
            content ""
            height 200%
            width 1px
            position absolute
            right -50%
            top -50%
            background $grey
        ul
            height 100%
            display flex
            flex-direction column
            list-style none
            justify-content space-between
            li
                a
                    color $grey
                    text-decoration none
                    font $text
                    transition 0.5s
                    position relative
                    &::after
                        content ""
                        height 1px
                        width 30%
                        position absolute
                        left -2px
                        bottom -2px
                        transform translateX(-100%)
                        background $purple
                        opacity 0
                        transition all 0.3s
                    &:hover, &.active
                        color $purple
                        &::after
                            transform translateX(0)
                            opacity 1

header
    height 100vh
    width 100vw
    display flex
    justify-content center
    align-items center
    text-align center
    .content
        h2
            color $purple
            font-family $font-family
            font-weight bold
            font-size 50px
            margin-bottom 10vh
        p
            color $grey
            font $text
    canvas
        position absolute
        z-index -1
main
    .project
        display flex
        flex-direction row
        justify-content space-between
        margin 12vw
        .img
            width 50%
            img
                width 100%
        .content
            display flex
            flex-direction: column
            width 40%
            h3
                font-size 6em
                font-family $font-family
                position relative
                width fit-content
                &::after
                    content ""
                    position absolute
                    width 100%
                    height 10%
                    background-color $purple
                    bottom 15%
                    left 0
                    opacity 0.5
            .text
                width 86%
                padding-left 5vw
                margin-top 5vh
                h2
                    font $title
                    font-weight 600
                p
                    font $text
                    padding-top 2vh